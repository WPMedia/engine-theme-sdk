{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "checkJs": false,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "preserve",
      "outDir": "dist/es",
      "isolatedModules": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "types/*.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ]
  }